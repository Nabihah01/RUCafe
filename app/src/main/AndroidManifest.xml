<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rucafe">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RUCafe">
        <activity
            android:name=".OrderingDonutsActivity"
            android:label="@string/donutsLabel"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".OrderingCoffeeActivity"
            android:label="@string/coffeeLabel"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".YourOrderActivity"
            android:label="@string/yourOrderLabel"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".StoreOrdersActivity"
            android:label="@string/storeOrdersLabel"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>